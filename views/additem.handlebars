<html>

<head>
	<title>Add A New Plastic</title>
	<meta charset = "utf-8">
	<meta name = "viewport" content = "width=device-width, initial-scale=1.0">
	<link href = "css/bootstrap.min.css" rel = "stylesheet">
	<link href = "css/bootstrap-theme.min.css" rel = "stylesheet">
	<link href = "css/additem.css" rel = "stylesheet">
	<link href = "css/navbar.css" rel = "stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
</head>

	<body>
			<div class="col-xs-12" id=space>
				<div class="jumbotron navigation-bar">
					<div class="dropdown">
						<img id = side-button src="assets/hamburger.png" style="max-width:100%; max-height:100%;"></img>
						<div class="dropdown-content">
							<a class="links-hidden" href="/"><p class="dropdown-font">homepage</p></a>
							<a class="links-hidden" href="/history"><p class="dropdown-font">log history</p></a>
							<a class="links-hidden" href="/share"><p class="dropdown-font">share with friends</p></a>
							<a class="links-hidden" href="/tips"><p class="dropdown-font">sustainability tips</p></a>
							<a class="links-hidden" href="/settings"><p class="dropdown-font">settings</p></a>
							<a class="links-hidden" href="/help"><p class="dropdown-font">help</p></a>
						</div>
					</div>
					
					<div class="home-btn">
						<button class="settings">
							<a href="/settings"><img src="assets/user_icon_s.png" style="max-width:75%; max-height:75%;"></img></a>
						</button>
					</div>
					<div class="home-btn">
						<button class="home">
							<a href="/"><img src="assets/home_S.png" style="max-width:75%; max-height:75%;"></img></a>
						</button>
					</div>
				</div>
				
			</div>
		<div class="container">
			<div class ="row">
				<div class = "col-xs-10 col-xs-offset-1 title">
						<h1 class = "plastrack" ><i>Add A Plastic</i></h1>
				</div>
			</div>
			
			<div class="row">
				<div class="col-xs-12">
					<div class="well question" id=name>
						<div class="name">
							Plastic Name:
						</div>
						<input type="text" placeholder="Name of plastic" name="plastic-name" id=plastic-name>
					</div>
				</div>
			</div>
			
			<div class="row">
				<div class="col-xs-12">
					<div class="well question" id=size>
						<div class="size">
							Size:
						</div>
						<select name="size" id=choose-boxes>
							<option value="...">...</option>
							<option value="small">small</option>
							<option value="medium">medium</option>
							<option value="large">large</option>
						</select>
					</div>
				</div>
			</div>
			
			<div class="row">
				<div class="col-xs-6 col-xs-offset-3 camera-col">
					<div class="camera">
						<i class="bi bi-cup"></i>
					</div>
				</div>
			</div>
			
			<div class="row">
				<div class="col-xs-6 col-xs-offset-3">
					<div class="well add-pic">
						Choose Icon
					</div>
				</div>
			</div>
			
			<div class="row icon-list">
				<div class="col-xs-6 col-xs-offset-3 camera-col">
					<div class="jumbotron plastic-list">
								<i class="bi bi-cup"></i>
								<i class="bi bi-bag"></i>
								<i class="bi bi-cup-straw"></i>
								<i class="bi bi-cup-fill"></i>
								<i class="bi bi-droplet"></i>
								<i class="bi bi-trash2"></i>
					</div>
				</div>
			</div>
			
			
			
			
			
			
			
			
			
			
			
			
			<div class="row">
			<div class="col-xs-4 col-xs-offset-4">
				<button type="submit" id=create-plastic>Create Plastic</button>
			</div>
			</div>
		</div>

	<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script type="text/javascript" src="/js/addplastics.js"></script>
	<script src="js/bootstrap.min.js"></script>
	
	
</body>

</html>
